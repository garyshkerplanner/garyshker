<!-- Navbar -->
<% if(!isError){ %> 
<nav class="navbar navbar-static-top navbar-expand-lg navbar-dark" style="background-color: #371a45;">
    <div class="container-fluid">
        <a class="navbar-brand mr-4" href="/"><img src="logo.png" alt="logo" style="height: 50px;"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler"
            aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse text-center" id="navbarToggler">
            <ul class="navbar-nav">
                <li class="nav-item <% if(nav=='home'){%> active <% } %>">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item <% if(nav=='about'){%> active <% } %>">
                    <a class="nav-link" href="/about">About</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button"
                        data-toggle="dropdown" aria-expanded="false">Planners
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item <% if(nav=='sprint'){%> active <% } %>" href="/sprint">Sprint</a></li>
                        <li><a class="dropdown-item <% if(nav=='weekly'){%> active  <% } %>" href="/weekly">Weekly planner</a></li>
                        <li><a class="dropdown-item <% if(nav=='achievement'){%> active  <% } %>" href="/achievement">Achievement & Gratitude</a></li>
                    </ul>
                </li>
            </ul>
        <% if (!login_info){  %> 
            <ul class="navbar-nav ml-auto">
                <form class="form-inline mt-1 mb-1 justify-content-center">
                    <button class="btn btn-outline-light" type="button" onclick="window.location.href='/users/login'"><i class="fa fa-sign-in mr-2"></i>Log in</button>
                </form>   
                <form class="form-inline mt-1 mb-1 mx-2 justify-content-center">
                    <button class="btn btn-outline-light" type="button" onclick="window.location.href='/users/register'"><i class="fa fa-user-plus mr-2"></i>Sign up</button>
                </form> 
            </ul>
        <% } else{ %>
            <ul class="navbar-nav ml-auto">
                <form class="form-inline mt-1 mb-1 justify-content-center">
                    <button class="btn btn-outline-light" type="button" onclick="window.location.href='/dashboard'"><i class="fa fa-user-o mr-2"></i>My profile</button>
                </form> 
                <form class="form-inline mt-1 mb-1 mx-2 justify-content-center">
                    <button class="btn btn-outline-light" type="button" onclick="window.location.href='/users/logout'"><i class="fa fa-sign-out mr-2"></i>Log out</button>
                </form> 
            </ul>
        <%} %> 
        </div>
    </div>
</nav> 
<% } %> 
   
